<div class="vcard h-card">
  {% if author.avatar %}
  {%- set avatarUrl -%}/assets/images/{{ author.avatar }}{% endset %}
  <img class="vcard__avatar u-photo" src="{{ avatarUrl | base64file }}" width="200" height="200"
    alt="{{ author.name }}" />
  {% endif %}

  <div class="vcard__content">
    <div class="vcard__title">
      <h1 class="p-name">{{ author.name }}</h1>
      {% if author.pronouns %}
      <em class="vcard__pronouns p-gender-identity">({{ author.pronouns }})</em>
      {% endif %}
    </div>

    <p class="vcard__subtitle lead">
      <span class="p-job-title">{{ author.occupation }}</span>
      {% if author.location %}
      <span aria-hidden="true">&middot;</span>
      <span class="p-locality">{{ author.location }}</span>
      {% endif %}
    </p>

    <div class="vcard__contact p-contact">
      {% if author.email %}
      <a class="vcard__link u-email" aria-label="Email" href="mailto:{{ author.email | obfuscate | safe }}">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
          <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
        </svg>
        <span class="vcard__link-text">{{ author.email | obfuscate | safe }}</span>
      </a>
      {% endif %}
      {% if author.telephone %}
      <a class="vcard__link p-tel" aria-label="Telephone" href="tel:{{ author.telephone | stripSpaces }}">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
          <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
        </svg>
        <span class="vcard__link-text">{{ author.telephone }}</span>
      </a>
      {% endif %}
      {% if author.website %}
      <a class="vcard__link u-url" aria-label="Website" href="{{ author.website }}">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
          <path d="M22 18V3H2v15H0v2h24v-2h-2zm-8 0h-4v-1h4v1zm6-3H4V5h16v10z"/>
        </svg>
        <span class="vcard__link-text">{{ author.website | stripProtocol }}</span>
      </a>
      {% endif %}

      {% if author.social %}
      <div class="vcard__social">
        {% for social in author.social %}
        <a class="vcard__link" href="{{ social.url }}" aria-label="{{ social.name }}" rel="me">
          {%- set isSocialIcon = true -%}
          {% if social.name == 'Github' %}
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M12.026 2c-5.509 0-9.974 4.465-9.974 9.974 0 4.406 2.857 8.145 6.821 9.465.499.09.679-.217.679-.481 0-.237-.008-.865-.011-1.696-2.775.602-3.361-1.338-3.361-1.338-.452-1.152-1.107-1.459-1.107-1.459-.905-.619.069-.605.069-.605 1.002.07 1.527 1.028 1.527 1.028.89 1.524 2.336 1.084 2.902.829.091-.645.351-1.085.635-1.334-2.214-.251-4.542-1.107-4.542-4.93 0-1.087.389-1.979 1.024-2.675-.101-.253-.446-1.268.099-2.64 0 0 .837-.269 2.742 1.021.798-.221 1.649-.332 2.496-.336.849.004 1.701.115 2.496.336 1.906-1.291 2.742-1.021 2.742-1.021.545 1.372.203 2.387.099 2.64.64.696 1.024 1.587 1.024 2.675 0 3.833-2.33 4.675-4.552 4.922.355.308.675.916.675 1.846 0 1.334-.012 2.41-.012 2.737 0 .267.178.577.687.479C19.146 20.115 22 16.379 22 11.974 22 6.465 17.535 2 12.026 2z"/>
            </svg>
          {% elif social.name == 'LinkedIn' %}
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
              <path d="M19.668 3H4.328C3.595 3 3 3.581 3 4.298v15.403C3 20.417 3.595 21 4.328 21h15.34c.733 0 1.331-.582 1.331-1.299V4.298c0-.717-.598-1.298-1.331-1.298zM8.339 18.337H5.667v-8.59h2.672v8.59zM7.003 8.574c-.856 0-1.548-.694-1.548-1.548s.691-1.548 1.548-1.548c.854 0 1.548.693 1.548 1.548s-.694 1.548-1.548 1.548zm11.335 9.763h-2.669V14.16c0-.996-.018-2.277-1.388-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248h-2.667v-8.59h2.56v1.174h.037c.355-.675 1.227-1.387 2.524-1.387 2.704 0 3.203 1.778 3.203 4.092v4.71z"/>
            </svg>      
          {% endif %}
          <span class="vcard__link-text p-nickname">{{- social.user -}}</span>
          <span class="sr-only">on {{ social.name }}</a>
        </a>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </div>
</div>